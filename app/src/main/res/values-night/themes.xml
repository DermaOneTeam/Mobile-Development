<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DermaOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/tertiary</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">#121212</item>

        <item name="colorSecondary">@color/white_pale</item>
        <item name="colorSecondaryVariant">#121212</item>
        <item name="colorOnSecondary">#121212</item>

        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiaryFixedVariant">#121212</item>
        <item name="colorOnTertiary">#121212</item>
    </style>

<!--    <style name="background"><item name="android:background">@color/black</item></style>-->
<!--    <style name="card_background"><item name="android:background">@color/white</item></style>-->
    <style name="background"><item name="android:background">#121212</item></style>
    <style name="text_color"><item name="android:textColor">#121212</item></style>
    <style name="text_color_opposite"><item name="android:textColor">@color/white</item></style>
    <style name="button_theme_primary">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>
    <style name="button_theme_secondary">
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="edit_text_theme">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white_pale</item>
    </style>
    <style name="icon_theme"><item name="android:tint">@color/black</item></style>
    <style name="icon_theme_opposite"><item name="android:tint">@color/white</item></style>
    <style name="card_theme"><item name="backgroundTint">@color/white</item></style>

</resources>