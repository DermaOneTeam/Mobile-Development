<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.classification.DetailResultActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/arrow_down_btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="@color/tertiary"
        android:backgroundTint="@color/secondary"
        android:drawableTop="@drawable/baseline_arrow_down_24"
        android:drawableTint="@color/tertiary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="50dp"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/arrow_down_btn"
        app:layout_constraintBottom_toTopOf="@id/back_to_home_btn">
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_about_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="About Disease:"
                style="@style/text_color_opposite"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/about_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/tv_prevention_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Prevention Methods:"
                style="@style/text_color_opposite"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/prevention_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"/>

            <TextView
                android:id="@+id/tv_drug_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Drug Advice:"
                style="@style/text_color_opposite"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/drug_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_to_home_btn"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="back to home"
        android:textSize="20dp"
        style="@style/button_theme_primary"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>