<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_no_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="45dp"
        android:textColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/iv_login_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to SkinScan, your reliable partner in skin health! Our advanced app is designed to help you identify and understand various skin conditions through a simple and user-friendly interface. By utilizing cutting-edge AI technology, we aim to provide accurate and timely information to assist you in managing your skin health effectively."
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="30dp"/>

<!--    <com.google.android.material.button.MaterialButton-->
